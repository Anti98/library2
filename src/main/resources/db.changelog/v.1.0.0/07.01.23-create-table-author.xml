<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="07.01.23-create-table-author" author="Andrey">
        <createTable tableName="author">
            <column name="id" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(64)"/>
            <column name="last_name" type="varchar(64)"/>
            <column name="second_name" type="varchar(64)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>