<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="07.01.23-create-table-book" author="Andrey">
        <createTable tableName="book_entity">
            <column name="id" type="bigint" startWith="1" autoIncrement="true" incrementBy="1">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="edition" type="varchar(64)"/>
            <column name="title" type="varchar(64)"/>
            <column name="author_id" type="bigint">
                <constraints foreignKeyName="book_author_id_person_id" references="author_entity(id)"  deleteCascade="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>